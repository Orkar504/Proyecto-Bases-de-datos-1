@using cuentasPorCobrar.Models;
@model cuentasPorCobrar.Models.Prestamo

@{
    ProyectoContext proyectoContext = new ProyectoContext();
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SolicitudPagos> solicitudes = proyectoContext.getSolicitudesPagosParaPrestamos();
    List<SelectListItem> itemsSolicitudes = solicitudes.Select(s => new SelectListItem { Value = s.Id.ToString(), Text = s.nombreCliente }).ToList();
}

<h1>Create</h1>

<h4>Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="solicitudId" class="control-label">Solicitud</label>
                <!--<input asp-for="IDprestamo" class="form-control" /> -->
                @Html.DropDownList("solicitudId",
                itemsSolicitudes,
                "Seleccione una solicitud",
                new { @class = "form-control" })

                <span asp-validation-for="solicitudId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="IdComite" class="control-label"></label>
                <input asp-for="IdComite" class="form-control" />
                <span asp-validation-for="IdComite" class="text-danger"></span>
            </div>*@


            <div class="form-group">
                <label asp-for="Capital" class="control-label"></label>
                <input asp-for="Capital" class="form-control" />
                <span asp-validation-for="Capital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasa_interes" class="control-label"></label>
                <input asp-for="Tasa_interes" class="form-control" />
                <span asp-validation-for="Tasa_interes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo_interes" class="control-label"></label>
                <input asp-for="Tipo_interes" class="form-control" />
                <span asp-validation-for="Tipo_interes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha_inicio" class="control-label"></label>
                <input asp-for="Fecha_inicio" class="form-control" />
                <span asp-validation-for="Fecha_inicio" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Fecha_final" class="control-label"></label>
                <input asp-for="Fecha_final" class="form-control" />
                <span asp-validation-for="Fecha_final" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Monto_cuota" class="control-label"></label>
                <input asp-for="Monto_cuota" class="form-control" />
                <span asp-validation-for="Monto_cuota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad_cuota" class="control-label"></label>
                <input asp-for="Cantidad_cuota" class="form-control" />
                <span asp-validation-for="Cantidad_cuota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo_pago" class="control-label"></label>
                <input asp-for="Periodo_pago" class="form-control" />
                <span asp-validation-for="Periodo_pago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
<!--
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <input asp-for="estado" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div> -->

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#solicitudId").change(function () {
                $.get("/Prestamos/getMonto", { Id: $("#solicitudId").val() }, function (data) {
                    //console.log(data)
                    // AÑADIMOS UN NUEVO label CON EL NOMBRE DEL ELEMENTO SELECCIONADO
                    $("#Capital").val(data)
                });
            });
        });
    </script>
}
